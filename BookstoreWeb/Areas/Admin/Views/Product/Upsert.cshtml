@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>



    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageURL" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.Title" />
                            <label asp-for="Product.Title" class="ms-2"></label>
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <textarea class="form-control border-0 shadow" asp-for="Product.Description"
                                      style="height: 100px: resize: none">

                    </textarea>
                            <label asp-for="Product.Description" class="ms-2"></label>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.ISBN" />
                            <label asp-for="Product.ISBN" class="ms-2"></label>
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.Author" />
                            <label asp-for="Product.Author" class="ms-2"></label>
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.ListPrice" />
                            <label asp-for="Product.ListPrice" class="ms-2"></label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.Price" />
                            <label asp-for="Product.Price" class="ms-2"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.Price50" />
                            <label asp-for="Product.Price50" class="ms-2"></label>
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input class="form-control border-0 shadow" asp-for="Product.Price100" />
                            <label asp-for="Product.Price100" class="ms-2"></label>
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select class="form-select border-0 shadow" asp-for="Product.CategoryId"
                                    asp-items="@Model.CategoryList">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-2"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Product.ImageURL" class="ms-2"></label>
                        </div>

                        <div class="row pt-2 mt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-info form-control">
                                    @(Model.Product.Id != 0 ? "Update" : "Create")
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-light form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>


                @*Src example : /images/product/[fileName].png*@
                <div class="col-2">
                    <img src="@Model.Product.ImageURL" width="100%" 
                        style="border-radius: 5px; border:2px solid black" />
                </div>
            </div>
            
        </form>
    </div>
</div>



@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}