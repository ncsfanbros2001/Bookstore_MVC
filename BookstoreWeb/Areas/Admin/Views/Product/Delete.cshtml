@model Bookstore.Models.Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>



    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />

            <div class="border p-3 mt-3">

                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Title" disabled />
                    <label asp-for="Title" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <textarea class="form-control border-0 shadow" asp-for="Description" disabled></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ISBN" disabled />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Author" disabled />
                    <label asp-for="Author" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="ListPrice" disabled />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price" disabled />
                    <label asp-for="Price" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price50" disabled />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input class="form-control border-0 shadow" asp-for="Price100" disabled />
                    <label asp-for="Price100" class="ms-2"></label>
                </div>  

                <div class="row mt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-light form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


